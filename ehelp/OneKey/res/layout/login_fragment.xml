<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:background="#80dbff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="130dp"
            android:text="YiZhu"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210sp"
        android:orientation="vertical">

    	<EditText
    	    android:id="@+id/password_input"
    	    android:layout_width="200dp"
    	    android:layout_height="wrap_content"
    	    android:layout_alignLeft="@+id/name_input"
    	    android:layout_below="@+id/name_input"
    	    android:layout_marginTop="30dp"
    	    android:background="@drawable/edittextbackground"
    	    android:hint="密码"
    	    android:maxLength="10"
    	    android:inputType="textPassword"
    	    android:padding="10dp" />

    	<EditText
    	    android:id="@+id/name_input"
    	    android:layout_width="200dp"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentLeft="true"
    	    android:layout_alignParentTop="true"
    	    android:layout_marginLeft="26dp"
    	    android:layout_marginTop="44dp"
    	    android:background="@drawable/edittextbackground"
    	    android:hint="手机号码"
    	    android:maxLength="11"
    	    android:padding="10dp" />

    	<Button
    	    android:id="@+id/submit"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignBaseline="@+id/name_input"
    	    android:layout_alignBottom="@+id/name_input"
    	    android:layout_toRightOf="@+id/name_input"
    	    android:layout_marginLeft="10dp"
    	    android:background="@drawable/loginbutton"
    	    android:gravity="center"
    	    android:text="登陆"
    	    android:textColor="@color/primary_text" />

    	<Button
    	    android:id="@+id/sign"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignBaseline="@+id/password_input"
    	    android:layout_alignBottom="@+id/password_input"
    	    android:layout_toRightOf="@+id/password_input"
    	    android:background="@drawable/loginbutton"
    	    android:layout_marginLeft="10dp"
    	    android:gravity="center"
    	    android:text="注册"
    	    android:textColor="@color/primary_text" />

    </RelativeLayout>

</LinearLayout>





